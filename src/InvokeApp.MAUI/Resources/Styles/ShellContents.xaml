<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InvokeApp.MAUI.Resources.Styles.ShellContents">

    <Style TargetType="ShellContent">
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Primary}"/>
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Black}"/>
    </Style>
    
</ResourceDictionary>